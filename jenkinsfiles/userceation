pipeline{
    agent any
    stages{
        stage("deletaing user"){
            steps{
               sh "sudo userdel BMD_jenkins" 
            }
        }
        stage("verifiy users"){
            steps{
               sh "sudo cat /etc/passwd"
            }
        }
        stage("adding user"){
           steps{
            sh "sudo uaeradd BMD_jenkins"
           }
           
        }
        stage("test"){
            steps{
             sh'''
             echo a
             echo b
             echo c
             '''
            }
        }
    }
    post {
        success{
            echo" The Build is success"
        }
        failure{
            echo" The Build is Failure"
        }
    }
}
